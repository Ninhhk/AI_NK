# Production Environment Configuration
# Inherits from .env.example and overrides for production

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================

# Environment
ENVIRONMENT=production

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION_$(date +%s)
ADMIN_PASSWORD=CHANGE_THIS_ADMIN_PASSWORD_IN_PRODUCTION

# Server settings
LOG_LEVEL=info
RELOAD=false
DEBUG=false
DEVELOPMENT_MODE=false

# Streamlit
STREAMLIT_SERVER_HEADLESS=true

# Ollama (use production model)
MODEL_NAME=llama3.1:8b
OLLAMA_MODEL_NAME=llama3.1:8b

# Database (use production database)
DATABASE_URL=postgresql://user:password@localhost:5432/ai_nvcb_prod

# Redis (use production Redis)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=production_redis_password

# Features
ENABLE_CLEANUP_TASKS=true
ENABLE_BACKGROUND_CLEANUP=true
ENABLE_MODEL_MANAGEMENT=true
ENABLE_SLIDE_GENERATION=true

# File storage (production paths)
UPLOAD_DIR=/var/lib/ai_nvcb/uploads
TEMP_DIR=/tmp/ai_nvcb
BACKUP_DIR=/var/backups/ai_nvcb

# SSL (enable for production)
SSL_KEYFILE=/etc/ssl/private/ai_nvcb.key
SSL_CERTFILE=/etc/ssl/certs/ai_nvcb.crt

# CORS (restrict to production domains)
CORS_ORIGINS=https://ai-nvcb.com,https://www.ai-nvcb.com

# Logging (production logging)
LOG_FILE=/var/log/ai_nvcb/ai_nvcb.log
LOG_ROTATION=1d
LOG_RETENTION=30

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Health checks
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10

# Performance
WORKER_CONCURRENCY=8
WORKER_TIMEOUT=300

# Cache settings (production optimized)
CACHE_TTL=3600
CACHE_MAX_SIZE=10000

# Rate limiting (production security)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Email notifications (configure for production)
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=ai-nvcb@your-domain.com
