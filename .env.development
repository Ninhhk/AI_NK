# Development Environment Configuration
# Inherits from .env.example and overrides for development

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================

# Environment
ENVIRONMENT=development

# Servers
LOG_LEVEL=debug
RELOAD=true
DEBUG=true
DEVELOPMENT_MODE=true

# Streamlit
STREAMLIT_SERVER_HEADLESS=false

# Ollama (use lightweight model for development)
MODEL_NAME=gemma2:2b
OLLAMA_MODEL_NAME=gemma2:2b

# Features (enable all for development)
ENABLE_CLEANUP_TASKS=true
ENABLE_BACKGROUND_CLEANUP=false  # Disable for dev to avoid interference
ENABLE_MODEL_MANAGEMENT=true
ENABLE_SLIDE_GENERATION=true

# Testing
SKIP_OLLAMA_CHECK=false
MOCK_OLLAMA_RESPONSES=false

# File retention (shorter for development)
DOCUMENT_RETENTION_DAYS=7
SLIDE_RETENTION_DAYS=7
UPLOAD_RETENTION_HOURS=4

# Cache settings (smaller for development)
CACHE_TTL=1800
CACHE_MAX_SIZE=100

# Rate limiting (more lenient for development)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60
