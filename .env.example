# AI NVCB Environment Configuration Template
# Copy this file to .env and configure your settings

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment (development, production, testing)
ENVIRONMENT=development

# Application URLs
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:8501
API_BASE_URL=http://localhost:8000

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Backend server settings
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info
RELOAD=true

# Frontend server settings
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=false

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================

# Ollama server settings
OLLAMA_BASE_URL=http://localhost:11434
MODEL_NAME=llama3.1:8b
OLLAMA_MODEL_NAME=llama3.1:8b
OLLAMA_TEMPERATURE=0.7
OLLAMA_TIMEOUT=300

# Default models to check/pull
OLLAMA_REQUIRED_MODELS=llama3.1:8b,mistral:7b

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database settings (if using external database)
DATABASE_URL=sqlite:///./ai_nvcb.db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=0

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================

# Redis settings (for caching and session management)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# FILE STORAGE CONFIGURATION
# =============================================================================

# Upload settings
UPLOAD_MAX_SIZE=10485760  # 10MB in bytes
UPLOAD_ALLOWED_EXTENSIONS=.txt,.pdf,.docx,.doc,.md,.rtf
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# Document retention
DOCUMENT_RETENTION_DAYS=30
SLIDE_RETENTION_DAYS=30
UPLOAD_RETENTION_HOURS=24

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Admin settings (for cleanup endpoints)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_password_in_production
SECRET_KEY=change_this_secret_key_in_production

# CORS settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true

# SSL settings (for production)
SSL_KEYFILE=
SSL_CERTFILE=

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable features
ENABLE_CLEANUP_TASKS=true
ENABLE_BACKGROUND_CLEANUP=true
ENABLE_MODEL_MANAGEMENT=true
ENABLE_SLIDE_GENERATION=true

# Testing features
TESTING=false
SKIP_OLLAMA_CHECK=false
MOCK_OLLAMA_RESPONSES=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging settings
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/ai_nvcb.log
LOG_ROTATION=1d
LOG_RETENTION=30

# =============================================================================
# MONITORING AND HEALTH CHECKS
# =============================================================================

# Health check settings
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=10

# Monitoring
ENABLE_METRICS=false
METRICS_PORT=9090

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Development mode settings
DEBUG=true
DEVELOPMENT_MODE=true
AUTO_RELOAD=true

# Profiling
ENABLE_PROFILING=false
PROFILE_DIR=./profiles

# =============================================================================
# DEPLOYMENT SETTINGS
# =============================================================================

# Docker settings
DOCKER_COMPOSE_FILE=docker-compose.yml
DOCKER_NETWORK=ai_nvcb_network

# Backup settings
BACKUP_DIR=./backups
BACKUP_RETENTION_DAYS=7

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Email settings (for notifications)
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@ai-nvcb.local

# Webhook settings
WEBHOOK_URL=
WEBHOOK_SECRET=

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

# Worker settings
WORKER_CONCURRENCY=4
WORKER_TIMEOUT=300

# Cache settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60 